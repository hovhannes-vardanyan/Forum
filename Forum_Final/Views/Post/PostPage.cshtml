@using ForumDAL
@using ForumDAL.Repositories
@model Forum_Final.ViewModels.PostViewModel

<h3>@Model.post.Title</h3>

<span>@Model.UserName</span>
<div class="row">


    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">Post Describtion</div>
            <div class="panel-body">

                @Model.post.Description

            </div>
        </div>


    </div>

    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">Comments</div>
            <div class="panel-body">

                <ul>
                    @foreach (var comment in Model.comments)
                    {
                        // <li class="list-group-item">@Html("PostPage", "Post") @post.Title</li>
                        <li class="list-group-item">
                            <h5>username</h5>
                             @comment.Title
                        </li>

                    }
                
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label for="comment">Add Comment</label>
                            <textarea name="comment"  rows="3" id="comment" class="form-control">

                        </textarea>
                        </div>
                        <button class="btn btn-primary">Add</button>
                    }
                </ul>
               
                 
            </div>
        </div>


    </div>

</div>