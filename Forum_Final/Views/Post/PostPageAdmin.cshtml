@using ForumDAL
@using ForumDAL.Repositories
@model Forum_Final.ViewModels.PostViewModel

<h3>@Model.post.Title</h3>


<div class="row">


    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading" style="height: 55px;">
                <div class="postDescription" style="float: left; padding: 7px 0px;">Post Description</div>
                <div class="editPostBtn" style="float: right;">
                    <a href = "https://localhost:44384/Post/Edit/@Model.post.PostID" class="btn btn-primary" name="Edit">Edit</a>
                </div>
            </div>

            <div class="panel-body">

                @Model.post.Description

            </div>
        </div>


    </div>

    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">Comments</div>
            <div class="panel-body">

                <ul>
                    @foreach (var comment in Model.comments)
                    {
                        // <li class="list-group-item">@Html("PostPage", "Post") @post.Title</li>
                        <li class="list-group-item" id="notify-@comment.CommentID">
                            <h5>@comment.UserName</h5>
                            @comment.Title
                        </li>

                    }

                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label for="comment">Add Comment</label>
                            <textarea name="title" rows="3" id="comment" class="form-control" required>

                        </textarea>
                       
                        </div>
                        <button type="submit" class="btn btn-primary" name="NewComment">Add</button>
                    }
                </ul>


            </div>
        </div>


    </div>

</div>