@model List<ForumDAL.Models.Notification>
@{
    ViewBag.Title = "Notifications";
}


<div class="container">
    <h2>Notifications</h2>
    <div class="panel">
        <div class="panel-body">
            <ul class="list-group">
                @foreach (var notification in Model)
                {
                    if (!notification.Checked)
                    {
                        <li class="list-group-item">
                            @Html.ActionLink(@notification.Message, "CheckNotification", new { id = notification.Id })
                            <span class="glyphicon glyphicon-asterisk" style="float:right"></span>
                        </li>

                    }
                    else
                    {
                        <li class="list-group-item">
                             @Html.ActionLink(@notification.Message, "CheckNotification", new { id = notification.Id })
                        </li>
                    }

                }
            </ul>
        </div>
    </div>
</div>
